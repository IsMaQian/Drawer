<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/offline_common_title_btn_selector"
    android:paddingLeft="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textSize="@dimen/font_32"
        android:text="北京"
        android:textColor="@color/taobao_black"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="35dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textSize="@dimen/font_24"
        android:textColor="@color/offline_down_size"
        android:text="总大小"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:id="@+id/name_size"
        android:layout_toRightOf="@+id/name"/>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_24"
            android:textColor="@color/gary"
            android:id="@+id/download_progress_status"
            android:gravity="center_vertical"
            android:layout_marginRight="7dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/download_status_image"
            android:gravity="center_vertical"
            android:src="@drawable/offlinearrow_download"
            android:padding="5dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/gray_lite"
        android:id="@+id/view1"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
